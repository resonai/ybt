Python(
    'flask-hello-app',
    sources='app.py',
    deps='//3rdparty:flask',
    packaging_params={
        'set_label': {
            'com.ybt.foo': 'bar',
        },
    },
    runtime_params={
        'ports': '5555:5000',
    }
)

DockerImage(
    'flask-hello',
    start_from='//3rdparty:python{}'.format(conf.python_version),
    deps=':flask-hello-app',
    docker_cmd=['python3', 'app.py'],
    image_tag=SCM.get_revision(),
    docker_labels={
        'com.ybt.here': 'there',
    }
)

PythonApp(
    'flask-app',
    base_image='//3rdparty:python{}'.format(conf.python_version),
    deps=':flask-hello-app',
    main='app.py',
    runtime_params={
        'container_name': 'my-flask-app',
    },
    image_tag=conf.settings.MY_VERSION
)
