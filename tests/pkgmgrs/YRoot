AptPackage(
    'wget',
    package='wget'
)

AptPackage(
    'curl',
    package='curl',
    deps=':wget'
)

AptPackage(
    'npm',
    package='npm',
)

AptPackage(
    'apt-transport-https',
    package='apt-transport-https',
    deps=':curl'
)

CustomInstaller(
    'node',
    uri='https://deb.nodesource.com/setup_16.x',
    script='install-nodejs.sh',
    deps=':apt-transport-https',
    packaging_params={
        'set_env': {
            'FOO': 'BAR',
        }
    }
)

AptGroup(
    'ruby',
    packages=['ruby', 'ruby-dev'],
    deps=':node',
    packaging_params={
        'set_env': {
            'TEST': '1',
        },
        'semicolon_join_env': {
            'PATH': '/foo/bar',
        },
    }
)

PythonPackage(
    'flask',
    package='flask',
    version='1.0.2',
    pip='pip',
    deps=':ruby',
    packaging_params={
        'semicolon_join_env': {
            'PATH': '/ham',
        },
    }
)

NpmPackage(
    'leftpad',
    package='left-pad',
    deps=[
      ':flask',
      ':npm',
    ]
)

GemPackage(
    'compass',
    package='compass',
    deps=':leftpad',
    packaging_params={
        'semicolon_join_env': {
            'PATH': '/spam',
        },
    }
)

PythonPackage(
    'gunicorn',
    package='gunicorn',
    deps=':compass',
    pip='pip'
)

ExtDockerImage(
    'python',
    image='python',
    tag='3'
)

DockerImage(
    'the-image',
    base_image=':python',
    docker_cmd='foo',
    build_user='root',
    run_user='root',
    deps=[
        ':gunicorn'
    ]
)

