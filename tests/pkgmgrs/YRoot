    source='deb http://packages.cloud.google.com/apt cloud-sdk-stretch main',
    key='B53DC80D13EDEF05'
)

AptPackage(
    'gcloud',
    package='google-cloud-sdk',
    deps=':gcloud-repository'
)

DockerImage(
    'another-image',
    base_image=':the-image',
    deps=':gcloud',
    upgrade_pip_packages=True,
)
