from yabt import policy

PROD_LICENSES = frozenset((
    '0BSD',
    'AAL',
    'Apache-2.0',
    'BSD-2-Clause',
    'BSD-2-Clause-Patent',
    'BSD-3-Clause',
    'EPL-1.0',
    'EPL-2.0',
    'GPL-2.0',
    'MIT',
    'MPL-1.0',
    'MPL-1.1',
    'MPL-2.0',
    'Python-2.0',
))

def get_policies(conf):
    return [
        policy.standard_licenses_only,
        policy.whitelist_licenses_policy('prod', PROD_LICENSES),
    ]
