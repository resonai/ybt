from yabt.docker import base_image_caching_behavior

Alias('@default', 'app:*')

ExtDockerImage(
    'ubuntu',
    image='ubuntu',
    tag='18.04'
)

ExtDockerImage(
    'python',
    image='python',
    tag='3.7'
)

DockerImage(
    'proto-builder',
    base_image=':ubuntu',
    deps='//3rdparty:protobuf',
    image_caching_behavior=base_image_caching_behavior(
        conf,
        remote_image_name='itamarost/proto-builder',
        remote_image_tag='3.5.1')
)

DockerImage(
    'proto-python',
    base_image=':python',
    deps='//3rdparty:py-protobuf'
)
