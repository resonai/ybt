def known_flavors():
    return ['debug', 'release']

def default_flavor():
    return 'release'

def get_common_config():
    clang = 'clang++-5.0'
    return {
        'compiler': clang,
        'linker': clang,
        'compile_flags': ['-std=c++11', '-Wall', '-fcolor-diagnostics'],
    }

def get_flavored_config(flavor):
    return {
        'release': {
            'compile_flags': ['$*', '-O2', '-DDEBUG'],
        },
        'debug': {
            'compile_flags': ['$*', '-g', '-DDEBUG'],
        },
    }.get(flavor, {})
